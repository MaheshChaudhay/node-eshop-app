<article class="cart-item">
  <div class="cart-item-info">
    <h2><%= cartItem.product.title %></h2>
    <p>
      &#8377;
      <span class="cart-item-price"><%= cartItem.totalPrice.toFixed(2) %></span>
      <span class="cart-product-price">
        (&#8377; <%= cartItem.product.price.toFixed(2) %> )
      </span>
    </p>
  </div>

  <form
    class="cart-item-management"
    data-productid="<%= cartItem.product.id %>"
    data-csrf="<%= locals.csrfToken %>"
  >
    <input type="number" required value="<%= cartItem.quantity  %>" />
    <button class="btn btn-alt">Update</button>
  </form>
</article>
