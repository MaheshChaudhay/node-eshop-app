  <form
    action="<%= submitUrl %>?_csrf=<%= locals.csrfToken %>"
    method="POST"
    enctype="multipart/form-data"
  >
    <p>
      <label for="title">Title</label>
      <input
        type="text"
        name="title"
        id="title"
        value="<%= product.title %>"
        required
      />
    </p>
    <div id='image-upload-control'>
      <p>
        <label for="image">Image</label>
        <input type="file" name="image" id="image" <% if (imageRequired) { %>
        required <% } %> accept="image/png,image/jpg" />
      </p>
      <img src='' alt='Selected image.'>
    </div>
    
    <p>
      <label for="summary">Summary</label>
      <input
        type="text"
        name="summary"
        id="summary"
        value="<%= product.summary %>"
        maxlength="250"
        required
      />
    </p>
    <p>
      <label for="price">Price</label>
      <input
        type="number"
        name="price"
        id="price"
        value="<%= product.price %>"
        min="1"
        step="0.1"
        required
      />
    </p>
    <p>
      <label for="description">Description</label>
      <textarea name="description" id="description" rows="7" required>
<%= product.description %></textarea
      >
    </p>
    <p>
      <button type="reset" class="btn btn-alt">Reset</button>
      <button class="btn">Save</button>
    </p>
  </form>
</prettier-ignore>
